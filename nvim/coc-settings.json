{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "json",
    "typescript",
    "toml",
    "cpp",
    "c"
  ],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "~/.cache/ccls"
        }
      }
    },
    "zls": {
      "command": "zls",
      "filetypes": ["zig"],
      "rootPatterns": ["source.zig", "Source.zig"],
      "initializationOptions": {}
    }
  }
}
