{
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "json",
    "typescript",
    "typescriptreact",
    "toml",
    "cpp",
    "c",
    "java",
    "cs",
    "javascript"
  ],
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": "/home/hector/cache/ccls"
        }
      }
    },
    "zls": {
      "command": "zls",
      "filetypes": ["zig"],
      "rootPatterns": ["source.zig", "Source.zig", "build.zig"],
      "initializationOptions": {}
    }
  }
}
